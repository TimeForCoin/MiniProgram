/* pages/Message/Message.wxss */
#container{
  display: flex;
  flex-direction: column;
}

#top{
  display: flex;
  flex-direction: column;
}


/*选择部分*/
.sort-wrap{
  display: flex;
  flex-direction: row;
  justify-content: center;
  justify-items: center;
  margin-top: 10rpx;
}

.sort-btn{
  display: flex;
  font-size: 32rpx;
  flex-direction: row;
  flex: 1;
  padding-top: 25rpx;
  padding-bottom: 20rpx;
  justify-content: center;
  justify-items: center;
}

#list{
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

/*管理列表*/
.list_item{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.item_img{
  margin-top: 15rpx;
  margin-left: 20rpx;
  width: 180rpx;
  height: 120rpx;
  border-radius: 20rpx;
}

/*分割线*/
.band1{
  width:100%;
  height: 3rpx;
  margin-top: 5rpx;
  background: rgb(243, 243, 243);
}

/*分割线*/
.band2{
  width:100%;
  height: 20rpx;
  margin-top: 5rpx;
  background: rgb(243, 243, 243);
}


.basic_info{
  margin-left: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.row_view{
  display:flex;
  width: 100%;
  flex-direction: row;
  align-items:center;
}
/*用于主体*/
.title{
  margin-top: 20rpx;
  font-size: 32rpx;
}
.payType{
  background: #ff7e67;
  margin: 20rpx 20rpx 0rpx 0rpx;
  padding: 3rpx 6rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 5rpx;
}

.subtitle{
  margin-top: 25rpx;
  color: gray;
  font-size: 30rpx;
}

.item_time{
  font-size: 28rpx;
  color: gray;
  margin-top: 20rpx;
  margin-left: 100rpx;
}

/*加载部分*/
.loading_view{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.loading {
  margin-right: 10rpx;
  width: 45rpx;
  height: 45rpx;
  animation: animation 1s linear infinite;
}

@keyframes animation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(1turn);
  }
}

.subtext{
  color:gray;
  font-size: 28rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: gray;
  z-index: 500;
  opacity: 0.7;
}