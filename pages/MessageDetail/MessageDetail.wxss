/* pages/MessageDetail/MessageDetail.wxss */
.messageDetail{
  width: 100%;
  height:100%;
  background-color:rgb(243, 243, 243);
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.singleDialog{
  width:100%;
  height:50rpx;
  display:flex;
  flex-direction: row;
  margin: 40rpx 30rpx;
}

.ava{
  height: 100rpx;
  width: 100rpx;
  border-radius: 20rpx;
  margin-top: 15rpx;
}

.details{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.username{
  color: gray;
  font-size: 28rpx;
}

.content{
  margin-top: 10rpx;
  font-size: 32rpx;
  border-radius: 20rpx;
  padding: 20rpx 20rpx;
  background-color: #fff;
}

.showTime{
  font-size: 28rpx;
  margin: 40rpx 0rpx;
  padding: 5rpx 40rpx;
  background: rgb(206, 206, 206);
  border-radius: 20rpx;
  text-align: center;

}