/* pages/AddItem/AddItem.wxss */

/*标题以及详情内容*/
.title_detail {
  margin: 20rpx 0;
  padding: 0 32rpx 0 32rpx;
}


.basic_info {
  display: flex;
  padding: 5rpx 0;
  align-items: flex-start;
}

.input_text {
  width: 100%;
  font-size: 32rpx;
}

.input_title {
  width: 100%;
  font-size: 34rpx;
}

/*分割线*/
.band1{
  width:100%;
  margin: 5rpx 0;
  height: 3rpx;
  background: rgb(243, 243, 243);
}

/*占位符*/
.placeholder_title{
  font-size: 34rpx;
  color: rgb(156, 156, 156);
}

.placeholder{
  font-size: 32rpx;
  color: rgb(156, 156, 156);
}


/*图片上传*/
#image_upload{
  display:inline-block;
  padding: 5rpx 0 10rpx 0;
}

.imgs{
  width: 140rpx;
  height: 140rpx;
  z-index: -1;
  margin:10rpx 10rpx 10rpx 0rpx;
  border-radius: 20rpx;
}

.imgs_first{
  width: 140rpx;
  height: 140rpx;
  z-index: -1;
  margin:10rpx 10rpx 10rpx 20rpx;
  border-radius: 20rpx;
}

/*右上角删除按钮*/
.img_del{
  z-index: 0;
  width: 35rpx;
  height: 35rpx;
  position:absolute;
}
/*主图*/
#firstTag{
  z-index: 2;
  position: absolute;
  margin: 100rpx 0;
  background: #fafafa;
  font-size: 30rpx;
  border-radius: 15rpx;
  padding: 6rpx 10rpx 6rpx 10rpx;
}

/*图片添加按钮*/
#addImage{
  width: 140rpx;
  height: 140rpx;
  margin:10rpx 0rpx 10rpx 20rpx;
  opacity: 0.4;
}

.band2{
  width:100%;
  height: 36rpx;
  background: rgb(243, 243, 243);
}

.title{
  flex: 1;
  width: 100%;
  font-weight: bold;
  margin: 20rpx 0;
  font-size: 34rpx;
}

/*输入金额*/
#price_set{
  margin-top: 10rpx;
  display: flex;
  direction: column;
}

#price_text{
  font-size: 34rpx;
  font-weight: bold;
  color: #404969;
}

#price_logo{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}

/*设置支付类型*/
.blockType{
  margin-top: 20rpx;
  display: flex;
  direction: column;
  font-size: 32rpx;
}
.typeBlock{
  width: 50%;
  margin: 10rpx 10rpx;
  text-align: center;
  border-radius: 25rpx;
  padding: 6rpx 0;
}

/*任务类型*/
#taskType{
  margin-top: 20rpx 0rpx;
  display: flex;
  direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
}
.taskBlock{
  background: #fff;
  margin-left: 10rpx;
  margin-top: 10rpx;
  text-align: center;
  border-radius: 25rpx;
  padding: 3rpx 10rpx;
  font-size: 32rpx;
  border: 2rpx solid rgba(0,0,0,.3);
}

/*按钮*/
.buttonSet{
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  display: flex;
  direction: column;
}
.btn{
  width: 45%;
  display: flex;
  height: 80rpx;
  font-size: 34rpx;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(0,0,0,.0);
}

#confirm_btn{
  background: #ffa300;
  margin-right: 20rpx;
  color: #ffffff;
}

/*弹窗*/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: gray;
  z-index: 500;
  opacity: 0.7;
}
 
.modalDialog {
  width: 80%;
  height: 320rpx;
  position: fixed;
  top: 29%;
  left: 0;
  z-index: 5001;
  background-color: #fff;
  margin-left: 10%;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: center;
}

.dialogTitle{
  margin-top:40rpx;
  color:#ffa300;
  font-size: 36rpx;
  height: 40rpx;
  font-weight: bold;
}

.dialogsubTitle{
  margin-top: 50rpx;
  width: 80%;
  margin-left: 10%;
}

.ok_btn{
  width: 50%;
  display: flex;
  height: 60rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  margin-top: 40rpx;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(0,0,0,.3);
}
/*用于图片删除的对话框*/
.deleteDialog {
  width: 80%;
  height: 300rpx;
  position: fixed;
  top: 32%;
  left: 0;
  z-index: 5001;
  background-color: #fff;
  margin-left: 10%;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: center;
}

.delete_dialog_title{
  margin-top:70rpx;
  font-size: 36rpx;
  height: 40rpx;
}
.delete_btn{
  width: 40%;
  display: flex;
  height: 90rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(0,0,0,.3);
}
