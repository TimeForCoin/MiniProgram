/* pages/CollectList/CollectList.wxss */
#container{
  display: flex;
  flex-direction: column;
}

#top{
  display: flex;
  flex-direction: column;
  text-align: center;
}
/*排序部分*/
.sort-wrap{
  display: flex;
  flex-direction: row;
  margin-top: 20 rpx;
  justify-content: center;
  justify-items: center;
}

/* 筛选器 */
.picker_field{
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  flex-direction: row;
}
.picker_font{
  flex:1;
  font-size: 30rpx;
  color: gray;
}

.sort-btn{
  display: flex;
  font-size: 30rpx;
  color: gray;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  justify-items: center;
}

.img_set{
  display: flex;
  flex-direction: column;
}

.sort_img{
  margin-left: 10rpx;
  height: 10rpx;
  width: 10rpx;
}

.img_up{
  margin-top: 8rpx;
}
.img_down{
  margin-top: 5rpx;
}

#list{
  margin-top: 20rpx;
  padding-left: 30rpx;
  text-align: center;
  padding-right: 30rpx;
}

/*管理列表*/
.list_item{
  display: flex;
  flex:7.5;
  flex-direction: row;
}

.item_img{
  margin-top: 15rpx;
  height:150rpx;
  width: 225rpx;
  flex: 2.5;
  border-radius: 20rpx;
}

.money_img{
  width: 28rpx;
  height:28rpx;

}

.money_text{
  font-size: 32rpx;
  color: #404969;
}

.payType{
  background: #ff7e67;
  margin: 0rpx 10rpx;
  padding: 3rpx 6rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 5rpx;
}
/* 删除或者置顶 */
.float_button{
   margin-top: 40rpx;
   width: 80rpx;
   height: 80rpx;
   flex:1;
   display: flex;
   justify-content: center;
   align-items: center;
   background-color: #ff7e67;
   border-radius: 50rpx;
}

.btn_img{
  width: 50rpx;
  height: 50rpx;
}

/*分割线*/
.band1{
  width:100%;
  height: 3rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: rgb(243, 243, 243);
}
.band2{
  width:100%;
  height: 20rpx;
  margin-top: 5rpx;
  margin-bottom: 15rpx;
  background: rgb(243, 243, 243);
}

.basic_info{
  margin-left: 20rpx;
  display: flex;
  flex:5;
  flex-direction: column;
}

.title{
  margin-top: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle{
  margin-top: 10rpx;
  color: gray;
  font-size: 28rpx;
}

.item_btn_set{
  flex: 0.5;
  height: 100rpx;
  margin-top: 25rpx;
}

.item_btn{
  width: 60rpx;
  height: 60rpx;
}

/*弹窗*/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: gray;
  z-index: 500;
  opacity: 0.7;
}
 
.modalDialog {
  width: 80%;
  height: 300rpx;
  position: fixed;
  top: 32%;
  left: 0;
  z-index: 5001;
  background-color: #fff;
  margin-left: 10%;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: center;
}

.dialogTitle{
  margin-top:70rpx;
  font-size: 36rpx;
  height: 40rpx;
}
.ok_btn{
  width: 40%;
  display: flex;
  height: 90rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(0,0,0,.3);
}

/*加载部分*/
.loading_view{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.loading {
  margin-right: 10rpx;
  width: 45rpx;
  height: 45rpx;
  animation: animation 1s linear infinite;
}

@keyframes animation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(1turn);
  }
}

.subtext{
  color:gray;
  font-size: 28rpx;
}