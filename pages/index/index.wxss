/**index.wxss**/

#container {
  text-align: center;
  display: flex;
  flex-direction: column;
  padding: 10rpx 0rpx;
}

.top_image {
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  height: 320rpx;
  margin-top: 20rpx;
}

/* 搜索部分 */

#search_view {
  background-color: rgba(231, 231, 231, 0.3);
  display: flex;
  margin: 10rpx 40rpx 10rpx 40rpx;
  flex-direction: row;
  border-radius: 20rpx;
}

#top {
  display: flex;
  flex-direction: column;
}

.input_title {
  font-size: 30rpx;
  margin-left: 20rpx;
  text-align: left;
  margin-top: 13rpx;
}

.search_logo {
  width: 32rpx;
  height: 32rpx;
  margin: 20rpx 20rpx;
}

/* 滑动图片 */

.slide-image {
  height: 100%;
  width: 100%;
  margin-top: 20rpx;
  border-radius: 10px;
}

/*标签页切换*/

.swiper-tab {
  background-color: #fff;
  width: 90%;
  margin-top: 20rpx;
  text-align: center;
  line-height: 70rpx;
  margin-left: auto;
  margin-right: auto;
}

.swiper-tab-list {
  transition: all 0.2s;
  font-size: 32rpx;
  display: inline-block;
  width: 25%;
  color: #797979;
}

.on {
  color: #ff8788;
  border-bottom: 6rpx solid #ff8788;
}

/* 下方列表部分 */

.list_container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

@keyframes show {
  0% {
    opacity: 0.0;
  }

  100% {
    opacity: 1.0;
  }
}

@keyframes fade {
  from {
    opacity: 1.0;
  }

  to {
   opacity: 0.0;
  }
}

.subtext {
  color: gray;
  font-size: 28rpx;
}

/*加载部分*/

.loading_view {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.loading {
  margin-right: 10rpx;
  width: 45rpx;
  height: 45rpx;
  animation: animation 1s linear infinite;
}


@keyframes fade {
  0% {
    opacity: 1.0;
  }

  100% {
   opacity: 0.0;
  }
}

/*下方表格部分*/

.list_left {
  width: 30%;
  margin: 20rpx 0rpx 0rpx 10rpx;
  display: inline-block;
  vertical-align: top;
}

.list_right {
  width: 30%;
  margin: 20rpx 10rpx 0rpx 20rpx;
  display: inline-block;
  vertical-align: top;
}

.list_left .list_item {
  margin-left: 18rpx;
  margin-right: 4rpx;
}

.list_right .list_item {
  margin-left: 4rpx;
  margin-right: 18rpx;
}

.list_item {
  margin-top: 22rpx;
  border-radius: 15rpx;
  width: 330rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 5px 5px 0 rgba(154, 160, 185, 0.05), 0 5px 30px 0 rgba(166, 173, 201, 0.22);
}

.item_img {
  width: 330rpx;
  height: 330rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.item_img_front {
  width: 330rpx;
  height: 80rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  position: absolute;
  background: linear-gradient(rgba(231, 231, 231, 0), 80%, rgba(255, 255, 255, 1));
  margin-top: 205rpx;
}

.payType {
  background: #ff8788;
  margin-right: 10rpx;
  padding: 6rpx 14rpx;
  font-size: 31rpx;
  color: #fff;
  border-radius: 15rpx;
}

.money_type {
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.task_type {
  position: absolute;
  margin-top: 300rpx;
  margin-left: 228rpx;
}

.info {
  display: flex;
  flex-direction: column;
  text-align: left;
  justify-content: flex-end;
  margin-bottom: 10rpx;
}

.info_title {
  margin: 32rpx 26rpx 6rpx 26rpx;
  font-size: 36rpx;
  text-align: left;
  word-break: break-all;
  font-weight: bold;
}

.money_icon {
  margin: 8rpx;
  width: 28rpx;
  height: 28rpx;
}

.money_text {
  font-size: 32rpx;
  margin-bottom: 12rpx;
  font-weight: bold;
  color: #ffa300;
}

.money_object {
  font-size: 30rpx;
  margin-bottom: 12rpx;
  color: #ffa300;
}

/*分割线*/

.band1 {
  width: 100%;
  height: 3rpx;
  margin-top: 5rpx;
  background: rgb(243, 243, 243);
}

.detail_top {
  padding: 10rpx 25rpx;
  display: flex;
  flex-direction: column;
}

.detail_bottom {
  padding: 4rpx 25rpx;
  display: flex;
  flex-direction: row;
}

.item_touxiang {
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.item_owner {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
