/* pages/Detail/Detail.wxss */

#top {
  margin-top: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 20rpx;
}

#user_info {
  display: flex;
  width: 100%;
  flex-direction: row;
  margin-top: 32rpx;
}

#touxiang {
  width: 80rpx;
  height: 80rpx;
  object-fit: fill;
  margin: 16rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

#user_basic_info {
  display: flex;
  width: 100%;
  margin-left: 30rpx;
  flex-direction: column;
}

.title {
  font-size: 30rpx;
  margin-left: 15rpx;
}

.subtitle {
  font-size: 26rpx;
  color: gray;
}

/*分割线*/

.band1 {
  width: 100%;
  margin: 10rpx 0rpx;
  height: 3rpx;
  background: rgb(243, 243, 243);
}

/*价钱和点赞*/

#price_view {
  display: flex;
  flex-direction: row;
}

#money {
  width: 26rpx;
  height: 26rpx;
  margin-top: 15rpx;
}

#price {
  font-size: 36rpx;
  color: #404969;
}

.payType {
  background: #ff8788;
  margin: 6rpx 10rpx;
  padding: 4rpx 10rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 10rpx;
}

#like_view {
  float: right;
  display: flex;
  flex-direction: row;
}

/*收藏量 阅读量*/

.imgs {
  width: 100%;
  height: 600rpx;
  background: white;
}

.details {
  height: 200rpx;
  width: 100%;
  margin-bottom: 20rpx;
}

.content_list {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.task-content {
  font-size: 30rpx;
  margin: 26rpx 0;
  color: grey;
}

.column_list {
  display: fledx;
  flex-direction: column;
  margin-top: 10rpx;
}

.task-icon {
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
  margin-right: 26rpx;
}

.task-item {
  margin: 32rpx 16rpx;
}

/* 加入按钮 */

.joininButton {
  margin-top: 60rpx;
  width: 60%;
  background-color: #ff8788;
  color: #fff;
}

/*分割线*/

.band2 {
  width: 100%;
  margin: 10rpx 0rpx;
  height: 30rpx;
  background: rgb(243, 243, 243);
}

#liuyan {
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
}

/*他人评论部分*/

.comment_user_info {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}

#bottom {
  text-align: center;
  color: gray;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.float_button {
  position: fixed;
  right: 25rpx;
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  z-index: 233;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff8788;
  border-radius: 50rpx;
}

/*自己的评论*/

#mycomment_bottom {
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  padding-bottom: 50rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  z-index: 9999;
}

#comment_input_bottom {
  font-size: 32rpx;
  margin-top: 15rpx;
  height: 56rpx;
  padding: 6rpx 0rpx 10rpx 10rpx;
  width: 75%;
  background: rgba(231, 231, 231, 0.3);
}

#commit_btn_bottom {
  border: 2rpx solid rgba(0, 0, 0, 0.3);
  font-size: 32rpx;
  padding: 0rpx 15rpx;
  border-radius: 20rpx;
  background-color: #e0fcff;
}

.btn_img {
  width: 50rpx;
  height: 50rpx;
}

/*任务类型*/

.taskType {
  margin: 20rpx 0rpx;
  display: flex;
  direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
}

.taskBlock {
  background: #fff;
  margin-left: 10rpx;
  text-align: center;
  border-radius: 24rpx;
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  background: #85dbd0;
  color: #fff;
}

/*自己的评论*/

.mycomment {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.comment_input {
  font-size: 32rpx;
  height: 46rpx;
  padding: 20rpx;
  background: rgba(231, 231, 231, 0.3);
}

.commit_btn {
  height: 46rpx;
  width: 46rpx;
  padding: 26rpx;
}

.comment_bottom {
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  z-index: 9999;
  padding-left: 20rpx;
  padding-right: 30rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

/*他人评论相关参数*/

.comment_type_view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 200rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.comment_ava {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}

/*弹窗*/

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: gray;
  z-index: 480;
  opacity: 0.7;
}

/*加载更多*/

.loading_view {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: gray;
  font-size: 28rpx;
  margin-bottom: 60rpx;
}

.loading {
  margin-right: 10rpx;
  width: 45rpx;
  height: 45rpx;
  animation: animation 1s linear infinite;
}

@keyframes animation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(1turn);
  }
}

.task_player {
  display: block;
  margin: 12rpx 16rpx;
  width: 100%;
}

.player_name {
  font-size: 30rpx;
  margin: auto 30rpx;
}

.player-list {
  margin: 32rpx 0;
}

.player_avatar {
  width: 48rpx;
  height: 48rpx;
  vertical-align: top;
  border-radius: 50%;
}

.deleteDialog {
  width: 80%;
  height: 300rpx;
  position: fixed;
  top: 32%;
  left: 0;
  z-index: 5001;
  background-color: #fff;
  margin-left: 10%;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: center;
}

.delete_dialog_title {
  margin-top: 70rpx;
  font-size: 36rpx;
  height: 40rpx;
}

.delete_btn {
  width: 140rpx;
  display: flex;
  height: 90rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(0, 0, 0, 0.3);
}

.money_icon {
  margin: 8rpx;
  width: 28rpx;
  height: 28rpx;
}

.money_text {
  font-size: 32rpx;
  margin-bottom: 12rpx;
  font-weight: bold;
  color: #ffa300;
}

.money_object {
  font-size: 34rpx;
  color: #ffa300;
}

.task-title {
  font-weight: bold;
  font-size: 46rpx;
  margin-right: 20rpx;
}

.title-box {
  margin: 32rpx 0;
}

.slide-image {
  width: 100%;
  height: 600rpx;
}

.username {
  font-weight: bold;
  font-size: 30rpx;
  margin-top: 24rpx;
}

.follow-btn {
  float: right;
  font-size: 28rpx;
  width: 166rpx;
  height: 43rpx;
  background: #ff8788;
  color: #fff;
  padding: 14rpx 40rpx;
  border-radius: 16rpx;
  margin-top: 28rpx;
}

.task-accept {
  font-size: 26rpx;
  color: gray;
  text-align: center;
  margin: 12rpx;
}