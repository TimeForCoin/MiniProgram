<!--pages/userInfo/userInfo-->
<view id = "container">
  <view id = "basic_info">
    <!--用户名以及基本信息-->
    <view id = "name_info">
      <view wx:if="{{hasUserInfo}}">
       <!--头像部分-->
          <view id = "head_basic">
            <image wx:if="{{hasUserInfo}}" class="head" src="/images/touxiang.jpg" />
            <image wx:else class="head" src="/images/touxiang.jpg" bindtap='bindLogin' />
          </view>
        <view class = "info_view">
          <text class = "info_text" style = "font-weight:bold">蔡徐坤</text>
        </view>
        <view class = "info_view">
          <text class = "info_text">卢本伟牛逼</text>
        </view>
      </view>
      <view wx:else id = "login">点击头像登录</view>
    </view>
  </view>
  <!--下半部分-->
    <view class = "downRegion">
      <!--第一组导航-->
      <view class='navi_cells'>
        <view class = "band"></view>
        <navigator url="" wx:for="{{nav_a}}" wx:key="item.id" class="cell">
          <!-- <image class="navi_icon" src="/images/userInfo/navi_1_{{item.id}}.png" /> -->
          <image class="navi_icon" src="/images/icons/user.png" />
          <text class="navi_text">{{item.name}}</text>
          <image class = "right_narrow" src="/images/icons/narrow.png" />
        </navigator>
      </view>

      <!--第二组导航-->
      <view class='navi_cells'>
      <view class = "band"></view>
        <navigator url="" wx:for="{{nav_b}}" wx:key="item.id" class="cell">
          <!-- <image class="navi_icon" src="/images/userInfo/navi_1_{{item.id}}.png" /> -->
          <image class="navi_icon" src="/images/icons/user.png" />
          <text class="navi_text">{{item.name}}</text>
          <image class = "right_narrow" src="/images/icons/narrow.png" />
        </navigator>
        <view class = "band"></view>
      </view>
    </view>
</view>



<!--对话框-->
<view class="modalDialog" wx:if="{{showModal}}">
  <image src = "/images/icons/close.png" class = "close" />
  <image src = "/images/index_sample.jpg" class = "ava" />
  <text class = "title">用户名</text>
  <input name="username" class="input_setting" placeholder="用户名" maxlength='20' />
  <view class = "band1"/>
  
  <text class = "title">性别</text>
  <radio-group name="radio-group" class = "info_text" style = "margin-left: 30rpx;">
      <label><radio value="Gentleman" />Gentleman</label>
      <label style = "margin-left:20rpx;"><radio value="Lady"/>Lady</label>
  </radio-group>
  <text class = "title">手机号码</text>
  <input name="phone" class="input_setting" type='digit' placeholder="手机号码" maxlength='15'/>
  <view class = "band1"/>
  <text class = "title">地址</text>
  <input name="address" class="input_setting" placeholder="手机号码" maxlength='20'/>
  <view class = "band1"/>

</view>
<button class='recharge' bindtap="submit">充值</button>
<!--蒙板-->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"/>